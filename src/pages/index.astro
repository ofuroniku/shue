import miImg from "@/assets/home/s-mi.png";
import { Image } from "astro:assets";

const MAX_POSTS = 10;
---

<PageLayout meta={{ title: "Home" }}>
	<section>
    <div class="flex justify-left">
      <Image
        alt="A cartoon cactus looking at the 'Astro.build' logo"
        fetchpriority="high"
        loading="eager"
        src={miImg}
      />
